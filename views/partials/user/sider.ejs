<script>
    // Handle Menu Active State
    document.addEventListener('DOMContentLoaded', function () {
        const currentPath = window.location.pathname;
        const menuItems = document.querySelectorAll('.menu-item');
        let bestMatch = null;
        let maxMatchLength = 0;

        // 1. Find the best matching link for the current URL
        menuItems.forEach(item => {
            const href = item.getAttribute('href');

            // Simple logic: if the current path starts with this href, it's a candidate.
            // We want the longest matching href (most specific).
            if (currentPath === href || (currentPath.startsWith(href) && href !== '/' && href !== '#')) {
                if (href.length > maxMatchLength) {
                    maxMatchLength = href.length;
                    bestMatch = item;
                }
            }
        });

        // Default to first item if no match found (or Home if strict) - mostly for dev/demo
        // If we found a match, activate it.
        if (bestMatch) {
            menuItems.forEach(i => i.classList.remove('active'));
            bestMatch.classList.add('active');
        }

        // 2. Add Click Event for Immediate Feedback (Dynamic Switching)
        menuItems.forEach(item => {
            item.addEventListener('click', function () {
                // Remove active class from all
                menuItems.forEach(i => i.classList.remove('active'));
                // Add to clicked
                this.classList.add('active');
            });
        });
    });
</script>