<!-- SIDEBAR PARTIAL -->

<style>
  :root {
    --bg-color: #FFF5F2;
    --sidebar-width: 260px;
    --text-color: #4A3B32;
    --hover-color: #F4D0CB;
    --active-text: #FFFFFF;
    --btn-color: #AF5454;
  }

  .sidebar {
    width: var(--sidebar-width);
    background-color: var(--bg-color);
    padding: 2rem 1.5rem;
    position: fixed;
    top: 64px; /* below header */
    left: 0;
    height: calc(100vh - 64px);
    overflow-y: auto;
    z-index: 1000;
    border-right: 1px solid rgba(0, 0, 0, 0.05);
  }

 

  .menu-item {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    margin-bottom: 8px;
    border-radius: 12px;
    color: var(--text-color);
    text-decoration: none;
    transition: 0.2s;
    font-weight: 500;
  }

  .menu-item i {
    width: 24px;
    margin-right: 12px;
  }

  .menu-item:hover {
    background-color: var(--hover-color);
  }

  .menu-item.active {
    background-color: var(--btn-color);
    color: var(--active-text);
  }

  /* Mobile */
  .mobile-toggle {
    display: none;
    position: fixed;
    top: 18px;
    right: 18px;
    z-index: 1100;
    font-size: 1.5rem;
    cursor: pointer;
  }

  .overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.3);
    z-index: 900;
  }

  @media (max-width: 992px) {
    .sidebar {
      transform: translateX(-100%);
      transition: 0.3s;
      top: 0;
      height: 100vh;
    }

    .sidebar.active {
      transform: translateX(0);
    }

    .mobile-toggle {
      display: block;
    }

    .overlay.active {
      display: block;
    }
  }
</style>

<div class="mobile-toggle" onclick="toggleSidebar()">
  <i class="fas fa-bars"></i>
</div>

<div class="overlay" onclick="toggleSidebar()"></div>

<aside class="sidebar">
  

  <nav>
    <a href="/admin" class="menu-item"><i class="fas fa-th-large"></i>Dashboard</a>
    <a href="/admin/orders" class="menu-item"><i class="fas fa-shopping-bag"></i>Order</a>
    <a href="/admin/products" class="menu-item"><i class="fas fa-box"></i>Products</a>
    <a href="/admin/sales-report" class="menu-item"><i class="fas fa-chart-line"></i>Sales report</a>
    <a href="/admin/users" class="menu-item"><i class="fas fa-users"></i>Customer</a>
    <a href="/admin/coupons" class="menu-item"><i class="fas fa-tag"></i>Coupon</a>
    <a href="/admin/category" class="menu-item"><i class="fas fa-layer-group"></i>Category</a>
    <a href="/admin/brands" class="menu-item"><i class="fas fa-star"></i>Brands</a>
    <a href="/admin/banners" class="menu-item"><i class="fas fa-image"></i>Banner</a>
    <a href="/admin/returns" class="menu-item"><i class="fas fa-undo"></i>Refund/Return</a>
  </nav>
</aside>

<script>
  function toggleSidebar() {
    document.querySelector('.sidebar')?.classList.toggle('active');
    document.querySelector('.overlay')?.classList.toggle('active');
  }

  document.addEventListener("DOMContentLoaded", () => {
    const currentPath = window.location.pathname;
    document.querySelectorAll(".menu-item").forEach(item => {
      const href = item.getAttribute("href");
      if (currentPath === href || (currentPath.startsWith(href) && href !== "/admin")) {
        item.classList.add("active");
      }
    });
  });
</script>
