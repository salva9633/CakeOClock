<!DOCTYPE html>
<html lang="en">

<head>
   
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - CakeOclock</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-color: #FFF5F2;
            /* Soft Pink Background */
            --sidebar-width: 260px;
            --text-color: #4A3B32;
            /* Dark Brown */
            --accent-color: #C27ba0;
            /* Rose/Mauve */
            --hover-color: #F4D0CB;
            --active-bg: #D98880;
            --active-text: #FFFFFF;
            --card-bg: #FFFFFF;
            --btn-color: #AF5454;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Outfit', sans-serif;
        }

        body {
            background-color: var(--bg-color);
            color: var(--text-color);
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Sidebar Styling */
        .sidebar {
            width: var(--sidebar-width);
            background-color: var(--bg-color);
            padding: 2rem 1.5rem;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            transition: all 0.3s ease;
            z-index: 1000;
            border-right: 1px solid rgba(0, 0, 0, 0.05);
        }

        .brand {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 3rem;
            color: var(--btn-color);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 12px 16px;
            margin-bottom: 8px;
            border-radius: 12px;
            color: var(--text-color);
            text-decoration: none;
            transition: all 0.2s ease;
            font-weight: 500;
            cursor: pointer;
        }

        .menu-item i {
            width: 24px;
            margin-right: 12px;
            font-size: 1.1rem;
        }

        .menu-item:hover {
            background-color: var(--hover-color);
        }

        .menu-item.active {
            background-color: var(--btn-color);
            color: var(--active-text);
            box-shadow: 0 4px 15px rgba(175, 84, 84, 0.3);
        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            padding: 2rem;
            transition: all 0.3s ease;
            width: calc(100% - var(--sidebar-width));
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .page-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--btn-color);
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            background-color: #ddd;
            border-radius: 50%;
            overflow: hidden;
        }

        .user-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Content Placeholder for Demo */
        .content-placeholder {
            min-height: 400px;
            border: 2px dashed #e0caca;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #a88d8d;
            font-size: 1.2rem;
            background: rgba(255, 255, 255, 0.5);
        }

        /* Mobile Toggle */
        .mobile-toggle {
            display: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: var(--text-color);
            z-index: 1001;
            position: fixed;
            top: 20px;
            right: 20px;
            background: rgba(255, 255, 255, 0.8);
            padding: 5px 10px;
            border-radius: 5px;
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .sidebar {
                transform: translateX(-100%);
                background: #FFF;
                box-shadow: 4px 0 15px rgba(0, 0, 0, 0.1);
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                width: 100%;
                padding: 1.5rem;
            }

            .mobile-toggle {
                display: block;
            }

            /* Overlay when sidebar is open */
            .overlay {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.3);
                z-index: 900;
            }

            .overlay.active {
                display: block;
            }
        }
    </style>
</head>

<body>

    <div class="mobile-toggle" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </div>

    <div class="overlay" onclick="toggleSidebar()"></div>

    <aside class="sidebar">
        <div class="brand">
            cakeOclock
        </div>

        <nav id="sidebar-nav">
            <a onclick="selectTab(this, 'Dashboard')" class="menu-item active">
                <i class="fas fa-th-large"></i>
                Dashboard
            </a>
            <a onclick="selectTab(this, 'Orders')" class="menu-item">
                <i class="fas fa-shopping-bag"></i>
                Order
            </a>
            <a onclick="selectTab(this, 'Add Products')" class="menu-item">
                <i class="fas fa-plus-square"></i>
                Add Products
            </a>
            <a onclick="selectTab(this, 'Products')" class="menu-item">
                <i class="fas fa-box"></i>
                Products
            </a>
            <a onclick="selectTab(this, 'Sales Report')" class="menu-item">
                <i class="fas fa-chart-line"></i>
                Sales report
            </a>
            <a onclick="selectTab(this, 'Customers')" class="menu-item">
                <i class="fas fa-users"></i>
                Customer
            </a>
            <a onclick="selectTab(this, 'Coupons')" class="menu-item">
                <i class="fas fa-tag"></i>
                Coupon
            </a>
            <a onclick="selectTab(this, 'Categories')" class="menu-item">
                <i class="fas fa-layer-group"></i>
                Category
            </a>
            <a onclick="selectTab(this, 'Brands')" class="menu-item">
                <i class="fas fa-star"></i>
                Brands
            </a>
            <a onclick="selectTab(this, 'Banners')" class="menu-item">
                <i class="fas fa-image"></i>
                Banner
            </a>
            <a onclick="selectTab(this, 'Refund/Return')" class="menu-item">
                <i class="fas fa-undo"></i>
                Refund/Return
            </a>

            <!-- <div style="margin-top: 2rem; border-top: 1px solid rgba(0,0,0,0.05); padding-top: 1rem;">
                <a href="#" class="menu-item" style="color: #d9534f;">
                    <i class="fas fa-sign-out-alt"></i>
                    Sign Out
                </a>
            </div> -->
        </nav>
    </aside>

    <main class="main-content">
        <header class="header">
            <h1 class="page-title" id="page-title">Dashboard</h1>
            <div class="user-profile">
                <span>Admin</span>
                <div class="user-avatar">
                    <img src="https://ui-avatars.com/api/?name=Admin&background=AF5454&color=fff" alt="User">
                </div>
            </div>
        </header>

        <div id="content-area" class="content-placeholder">
            Dashboard Content Area
        </div>
    </main>

    <script>
        // Toggle Sidebar for Mobile
        function toggleSidebar() {
            const sidebar = document.querySelector('.sidebar');
            const overlay = document.querySelector('.overlay');
            sidebar.classList.toggle('active');
            overlay.classList.toggle('active');
        }

        // Handle Tab Switching
        function selectTab(element, title) {
            // Update Active State in Sidebar
            const items = document.querySelectorAll('.menu-item');
            items.forEach(item => item.classList.remove('active'));
            element.classList.add('active');

            // Update Page Title
            document.getElementById('page-title').innerText = title;

            // Update Content Placeholder (Simulate Navigation)
            document.getElementById('content-area').innerText = title + ' Content Area';

            // On mobile, close sidebar after selection
            if (window.innerWidth <= 992) {
                toggleSidebar();
            }
        }
    </script>
</body>

</html>