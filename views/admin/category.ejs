<!-- CATEGORY PAGE -->

<style>
  /* ===== PAGE HEADER ===== */
  .top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .top-bar h1 {
    font-size: 32px;
    font-weight: 700;
    color: #4a2b2b;
  }

  .add-btn {
    background: #c75c5c;
    color: #fff;
    border: none;
    padding: 10px 18px;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
  }

  /* ===== CONTROLS ===== */
  .controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 18px;
  }

  .search-box {
    display: flex;
    width: 320px;
  }

  .search-box input {
    flex: 1;
    padding: 10px 14px;
    border-radius: 10px 0 0 10px;
    border: none;
    background: #ddb0b0;
  }

  .search-box button {
    border: none;
    padding: 10px 14px;
    background: #c75c5c;
    color: #fff;
    border-radius: 0 10px 10px 0;
    cursor: pointer;
  }

  /* ===== TABLE ===== */
  .table-wrapper {
    background: #fff;
    border-radius: 14px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  thead {
    background: #b85b5b;
    color: #fff;
  }

  th, td {
    padding: 16px;
    font-size: 14px;
    text-align: left;
  }

  tbody tr {
    border-bottom: 1px solid #f1f1f1;
  }

  .category-cell {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .icon {
    width: 38px;
    height: 38px;
    border-radius: 10px;
    overflow: hidden;
  }

  .icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .category-name {
    font-weight: 600;
  }

  .desc {
    max-width: 350px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #7a5a5a;
  }

  .status {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: #b85b5b;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    cursor: pointer;
  }

  .edit-btn {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 18px;
  }

  /* ===== MODALS ===== */
  .modal {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.45);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 3000;
  }

  .modal-box {
    background: #fff;
    width: 560px;
    border-radius: 14px;
    overflow: hidden;
  }

  .modal-header {
    background: #1a9d6f;
    color: #fff;
    padding: 14px 18px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .modal-body {
    padding: 18px;
  }

  .modal-footer {
    padding: 14px 18px;
    text-align: right;
  }

  .modal-body label {
    font-weight: 600;
    margin-top: 10px;
    display: block;
  }

  .modal-body input,
  .modal-body textarea,
  .modal-body select {
    width: 100%;
    padding: 10px;
    border-radius: 6px;
    border: 1px solid #ccc;
    margin-top: 6px;
  }

  .modal-row {
    display: flex;
    gap: 16px;
    margin-top: 10px;
  }

  .image-box {
    width: 140px;
    height: 120px;
    border: 2px dashed #ccc;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
  }

  .image-box img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .error {
    color: red;
    font-size: 13px;
    margin-top: 8px;
  }
</style>

<!-- ===== HEADER ===== -->
<div class="top-bar">
  <h1>Categories</h1>
  <button class="add-btn" onclick="openAddModal()">+ New</button>
</div>

<!-- ===== SEARCH ===== -->
<div class="controls">
  <div class="search-box">
    <input type="text" placeholder="Search category name...">
    <button>üîç</button>
  </div>
</div>

<!-- ===== TABLE ===== -->
<div class="table-wrapper">
  <table>
    <thead>
      <tr>
        <th>Category Info</th>
        <th>Description</th>
        <th>Created</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (cat && cat.length) { %>
        <% cat.forEach(item => { %>
          <tr>
          <td>
  <div class="category-cell">
    <div class="icon">
      <img src="<%= item.image || '/images/default-category.png' %>">
    </div>
    <div class="category-name"><%= item.name %></div>
  </div>
</td>

            <td class="desc"><%= item.description %></td>
<td><%= new Date(item.createdAt).toLocaleDateString("en-IN", {
  day: "2-digit",
  month: "short",
  year: "numeric"
}) %></td>

            <td>
              <div class="status" onclick="softDeleteCategory('<%= item._id %>')">üóëÔ∏è</div>
            </td>

            <td>
              <button
                class="edit-btn"
                onclick="openEditModal(
                  '<%= item._id %>',
                  '<%= item.name %>',
                  '<%= item.description %>',
                  '<%= item.image %>',
                  '<%= item.isActive %>'
                )"
              >
                ‚úèÔ∏è
              </button>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="5" style="text-align:center;padding:20px;">
            No categories found
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<!-- ===== ADD MODAL ===== -->
<div class="modal" id="addModal">
  <div class="modal-box">
    <div class="modal-header">
      <h3>Add Category</h3>
      <span style="cursor:pointer" onclick="closeAddModal()">√ó</span>
    </div>

    <div class="modal-body">
      <label>Name</label>
      <input type="text" id="catName">

      <div class="modal-row">
        <div>
          <label>Image</label>
          <div class="image-box" onclick="catImage.click()">
            <span id="imgText">+ Add Image</span>
            <img id="preview" style="display:none">
          </div>
          <input type="file" id="catImage" hidden accept="image/*" onchange="previewImage(event)">
        </div>

        <div style="flex:1">
          <label>Description</label>
          <textarea id="catDesc"></textarea>
        </div>
      </div>

      <label>Status</label>
      <select id="catStatus">
        <option value="true">Active</option>
        <option value="false">Inactive</option>
      </select>

      <p class="error" id="errorMsg"></p>
    </div>

    <div class="modal-footer">
      <button class="add-btn" onclick="submitCategory()">Add Category</button>
    </div>
  </div>
</div>

<!-- ===== EDIT MODAL ===== -->
<div class="modal" id="editModal">
  <div class="modal-box">
    <div class="modal-header">
      <h3>Update Category</h3>
      <span style="cursor:pointer" onclick="closeEditModal()">√ó</span>
    </div>

    <div class="modal-body">
      <input type="hidden" id="editId">

      <label>Name</label>
      <input type="text" id="editName">

      <div class="modal-row">
        <div>
          <label>Thumbnail</label>
          <div class="image-box" onclick="editImage.click()">
            <img id="editPreview">
          </div>
          <input type="file" id="editImage" hidden accept="image/*" onchange="previewEditImage(event)">
        </div>

        <div style="flex:1">
          <label>Description</label>
          <textarea id="editDesc"></textarea>
        </div>
      </div>

      <label>Status</label>
      <select id="editStatus">
        <option value="true">Active</option>
        <option value="false">Inactive</option>
      </select>

      <p class="error" id="editError"></p>
    </div>

    <div class="modal-footer">
      <button class="add-btn" onclick="updateCategory()">Update Category</button>
    </div>
  </div>
</div>

<!-- ===== SCRIPTS ===== -->
<script>
  const addModal = document.getElementById("addModal");
  const editModal = document.getElementById("editModal");

  function openAddModal() {
    addModal.style.display = "flex";
    errorMsg.innerText = "";
  }

  function closeAddModal() {
    addModal.style.display = "none";
  }

  function previewImage(e) {
    preview.src = URL.createObjectURL(e.target.files[0]);
    preview.style.display = "block";
    imgText.style.display = "none";
  }

  function submitCategory() {
    const name = catName.value.trim();
    const desc = catDesc.value.trim();
    const image = catImage.files[0];

    if (!name || !desc || !image) {
      errorMsg.innerText = "All fields are required";
      return;
    }

    const formData = new FormData();
    formData.append("name", name);
    formData.append("description", desc);
    formData.append("image", image);
    formData.append("isActive", catStatus.value);

    fetch("/admin/category/add", {
      method: "POST",
      body: formData
    }).then(() => location.reload());
  }

  function softDeleteCategory(id) {
    if (!confirm("Delete this category?")) return;
    fetch(`/admin/category/delete/${id}`, { method: "DELETE" })
      .then(() => location.reload());
  }

  function openEditModal(id, name, desc, image, status) {
    editId.value = id;
    editName.value = name;
    editDesc.value = desc;
    editStatus.value = status;
    editPreview.src = image;
    editModal.style.display = "flex";
  }

  function closeEditModal() {
    editModal.style.display = "none";
    editError.innerText = "";
  }

  function previewEditImage(e) {
    editPreview.src = URL.createObjectURL(e.target.files[0]);
  }

  function updateCategory() {
    const formData = new FormData();
    formData.append("name", editName.value.trim());
    formData.append("description", editDesc.value.trim());
    formData.append("isActive", editStatus.value);

    if (editImage.files[0]) {
      formData.append("image", editImage.files[0]);
    }

    fetch(`/admin/category/edit/${editId.value}`, {
      method: "PATCH",
      body: formData
    }).then(() => location.reload());
  }
</script>
