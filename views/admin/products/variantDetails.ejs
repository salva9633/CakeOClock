<div class="container-fluid p-4">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h4>
        <%= variant.productId.productName %>
        â€” <span class="text-muted"><%= variant.weight %> g</span>
      </h4>
    </div>

    <button
      class="btn btn-primary"
      data-bs-toggle="modal"
      data-bs-target="#addBatchModal"
    >
      + Add Batch
    </button>
  </div>

  <!-- BATCH TABLE -->
  <div class="table-responsive">
    <table class="table table-bordered align-middle">
      <thead class="table-light">
        <tr>
          <th>MFD</th>
          <th>Expiry</th>
          <th>Available Stock</th>
          <th>Status</th>
        </tr>
      </thead>

      <tbody>
        <% if (batches.length === 0) { %>
          <tr>
            <td colspan="4" class="text-center text-muted">
              No batches added yet
            </td>
          </tr>
        <% } else { %>
          <% batches.forEach(batch => { %>
            <tr>
              <td>
                <%= new Date(batch.manufacturedAt).toDateString() %>
              </td>

              <td>
                <%= new Date(batch.expiryAt).toDateString() %>
              </td>

              <td><%= batch.availableStock %></td>

              <td>
                <span class="badge 
                  <%= batch.status === 'active'
                    ? 'bg-success'
                    : batch.status === 'expired'
                    ? 'bg-danger'
                    : 'bg-warning text-dark'
                  %>">
                  <%= batch.status %>
                </span>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<!-- ADD BATCH MODAL -->
<div class="modal fade" id="addBatchModal" tabindex="-1">
  <div class="modal-dialog">
    <form
      action="/admin/batches/add"
      method="post"
      class="modal-content"
    >

      <input type="hidden" name="variantId" value="<%= variant._id %>">
      <input type="hidden" name="productId" value="<%= variant.productId._id %>">

      <div class="modal-header">
        <h5 class="modal-title">Add Batch</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <label>Manufactured Date</label>
        <input
          type="date"
          name="manufacturedAt"
          class="form-control"
          required
        >

        <label class="mt-3">Expiry Days</label>
        <input
          type="number"
          name="expiryDays"
          class="form-control"
          required
        >

        <label class="mt-3">Initial Stock</label>
        <input
          type="number"
          name="initialStock"
          class="form-control"
          required
        >
      </div>

      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >
          Cancel
        </button>
        <button class="btn btn-primary">
          Save Batch
        </button>
      </div>

    </form>
  </div>
</div>
