<div class="container-fluid p-4">

  <div class="mb-4">
    <h4><%= product.productName %></h4>
    <p class="text-muted"><%= product.description %></p>

    <button
      class="btn btn-primary"
      data-bs-toggle="modal"
      data-bs-target="#addVariantModal"
    >
      + Add Variant
    </button>
  </div>

  <table class="table table-bordered align-middle">
    <thead class="table-light">
      <tr>
        <th>Weight</th>
        <th>Price</th>
        <th>Total Stock</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% if (variants.length === 0) { %>
        <tr>
          <td colspan="5" class="text-center text-muted">
            No variants added yet
          </td>
        </tr>
      <% } else { %>
        <% variants.forEach(variant => { %>
          <tr>
            <td>
              <%= variant.weight >= 1000
                ? (variant.weight / 1000) + ' kg'
                : variant.weight + ' g'
              %>
            </td>

            <td>â‚¹ <%= variant.salePrice %></td>

            <td><%= variant.totalStock %></td>

            <td>
              <span class="badge <%= variant.totalStock > 0 ? 'bg-success' : 'bg-danger' %>">
                <%= variant.totalStock > 0 ? 'Available' : 'Out of Stock' %>
              </span>
            </td>

            <td>
              <a
                href="/admin/variants/<%= variant._id %>"
                class="btn btn-sm btn-outline-primary"
              >
                Manage Batches
              </a>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

<!-- ADD VARIANT MODAL -->
<div class="modal fade" id="addVariantModal" tabindex="-1">
  <div class="modal-dialog">
    <form action="/admin/variants/add" method="post" class="modal-content">

      <input type="hidden" name="productId" value="<%= product._id %>">

      <div class="modal-header">
        <h5 class="modal-title">Add Variant</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">

        <label>Weight</label>
        <select name="weight" class="form-select" required>
          <option value="" disabled selected>Select weight</option>
          <option value="500">500 g</option>
          <option value="750">750 g</option>
          <option value="1000">1 kg</option>
          <option value="2000">2 kg</option>
        </select>

        <label class="mt-3">Regular Price</label>
        <input
          type="number"
          name="regularPrice"
          class="form-control"
          required
        >

        <label class="mt-3">Sale Price</label>
        <input
          type="number"
          name="salePrice"
          class="form-control"
          required
        >
      </div>

      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >
          Cancel
        </button>
        <button class="btn btn-primary">
          Save Variant
        </button>
      </div>

    </form>
  </div>
</div>
