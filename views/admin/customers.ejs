

<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Management</title>
<%- include("../../views/partials/admin/sidebar") %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --bg-color: #FFF5EC;
            --table-header: #E5B9B7;
            --text-dark: #5D4037;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-dark);
            min-height: 100vh;
            padding: 2rem;
        }

        .search-container {
            position: relative;
            max-width: 600px;
            margin: 0 auto 3rem;
        }

        .search-input {
            width: 100%;
            padding: 15px 30px 15px 55px;
            padding-right: 120px;
            border-radius: 50px;
            border: none;
            background: #fff;
            box-shadow: 0 4px 15px rgba(176, 105, 104, 0.1);
            outline: none;
        }

        .search-icon {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: #B06968;
        }

        .search-btn {
            position: absolute;
            right: 8px;
            top: 6px;
            bottom: 6px;
            background: var(--table-header);
            color: #fff;
            border: none;
            padding: 0 35px;
            border-radius: 40px;
        }

        .custom-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 8px;
        }

        .custom-table thead th {
            background: var(--table-header);
            padding: 1rem 2rem;
        }

        .custom-table tbody tr {
            background: #F8E1E1;
        }

        .custom-table td {
            padding: 1rem 2rem;
        }

        .avatar-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #D6D6D6;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 10px;
        }

        .btn-custom {
            padding: 6px 20px;
            border-radius: 8px;
            border: none;
            font-size: 0.85rem;
        }

        .btn-block-custom {
            background: #da6541;
            color: #fff;
        }

        .btn-unblock-custom {
            background: #E8F5E9;
            color: #2E7D32;
        }

        .pagination-container {
            display: flex;
            gap: 8px;
            margin-top: 20px;
        }

        .page-num {
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 6px;
            text-decoration: none;
            color: #555;
        }

        .page-num.active {
            background: #D6D6E0;
            font-weight: bold;
        }


        /* Right icon inside input */
.right-icon {
    position: absolute;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    color: #B06968;
    font-size: 1.1rem;
}

/* Hide number input arrows (optional) */
.search-input::-webkit-search-cancel-button {
    display: none;
}

    </style>
</head>

<body>

<div class="container-fluid">

    <!-- SEARCH -->
    <form method="GET" action="/admin/users" class="search-container" id="searchForm">

    <!-- <i class="fas fa-search search-icon"></i> -->

    <input
        type="text"
        name="search"
        id="searchInput"
        value="<%= search || '' %>"
        class="search-input"
        placeholder="Search customers..."
        autocomplete="off"
    >

    <!-- Right Icon (Search / Clear) -->
    <span class="right-icon" id="rightIcon">
        <i class="fas fa-search" id="searchIcon"></i>
        <i class="fas fa-times d-none" id="clearIcon"></i>
    </span>

</form>



    <!-- TABLE -->
    <div class="table-responsive">
        <table class="custom-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Join Date</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                <% if (users.length === 0) { %>
                    <tr>
                        <td colspan="4" class="text-center">No customers found</td>
                    </tr>
                <% } else { %>
                    <% users.forEach(user => { %>
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle">
                                        <%= user.name.charAt(0).toUpperCase() %>
                                    </div>
                                    <%= user.name %>
                                </div>
                            </td>

                            <td><%= user.email %></td>
                            <td><%= user.phone || "N/A" %></td>
            <td>
                <%= new Date(user.createdAt).toLocaleDateString("en-IN", {
                    day: "2-digit",
                    month: "short",
                    year: "numeric"
                }) %>
            </td>


            <td>
                <% if (user.isBlocked) { %>
                    <button
                        class="btn-custom btn-unblock-custom"
                        onclick="openConfirmModal(
                        'Unblock User',
                        'Are you sure you want to unblock <%= user.name %>?',
                        '/admin/unblock-user/<%= user._id %>',
                        'btn-success'
                        )">
                        Unblock
                    </button>
                <% } else { %>
                    <button
                        class="btn-custom btn-block-custom"
                        onclick="openConfirmModal(
                        'Block User',
                        'Are you sure you want to block <%= user.name %>?',
                        '/admin/block-user/<%= user._id %>',
                        'btn-danger'
                        )">
                        Block
                    </button>
                <% } %>

                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
    <!-- CONFIRM BLOCK / UNBLOCK MODAL -->
<div class="modal fade" id="confirmActionModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="confirmModalTitle">Confirm Action</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body" id="confirmModalBody">
        Are you sure?
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <a href="#" id="confirmActionBtn" class="btn">
          Yes, Continue
        </a>
      </div>

    </div>
  </div>
</div>


    <!-- PAGINATION -->
    <div class="pagination-container">
        <% for (let i = 1; i <= totalPages; i++) { %>
            <a
                href="/admin/users?page=<%= i %>&search=<%= search || '' %>"
                class="page-num <%= currentPage === i ? 'active' : '' %>">
                <%= i %>
            </a>
        <% } %>
    </div>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  function openConfirmModal(title, message, actionUrl, btnClass) {
    document.getElementById("confirmModalTitle").innerText = title;
    document.getElementById("confirmModalBody").innerText = message;

    const confirmBtn = document.getElementById("confirmActionBtn");
    confirmBtn.href = actionUrl;
    confirmBtn.className = "btn " + btnClass;

    const modal = new bootstrap.Modal(
      document.getElementById("confirmActionModal")
    );
    modal.show();
  }
</script>
<script>
const searchInput = document.getElementById("searchInput");
const searchIcon = document.getElementById("searchIcon");
const clearIcon = document.getElementById("clearIcon");
const searchForm = document.getElementById("searchForm");

/* ---------- On page load ---------- */
toggleIcons();

/* ---------- While typing ---------- */
searchInput.addEventListener("input", () => {
    toggleIcons();
});

/* ---------- Click search icon ---------- */
searchIcon.addEventListener("click", () => {
    if (searchInput.value.trim() !== "") {
        searchForm.submit();
    }
});

/* ---------- Click clear icon ---------- */
clearIcon.addEventListener("click", () => {
    searchInput.value = "";
    toggleIcons();
    window.location.href = "/admin/users";
});

/* ---------- Helper ---------- */
function toggleIcons() {
    if (searchInput.value.trim() !== "") {
        searchIcon.classList.add("d-none");
        clearIcon.classList.remove("d-none");
    } else {
        clearIcon.classList.add("d-none");
        searchIcon.classList.remove("d-none");
    }
}
</script>



</body>

</html>
