

<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Management</title>
<%- include("../../views/partials/admin/header") %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --bg-color: #FFF5EC;
            --table-header: #E5B9B7;
            --text-dark: #5D4037;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-dark);
            min-height: 100vh;
            padding: 2rem;
        }

        .search-container {
            position: relative;
            max-width: 600px;
            margin: 0 auto 3rem;
        }

        .search-input {
            width: 100%;
            padding: 15px 30px 15px 55px;
            padding-right: 120px;
            border-radius: 50px;
            border: none;
            background: #fff;
            box-shadow: 0 4px 15px rgba(176, 105, 104, 0.1);
            outline: none;
        }

        .search-icon {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: #B06968;
        }

        .search-btn {
            position: absolute;
            right: 8px;
            top: 6px;
            bottom: 6px;
            background: var(--table-header);
            color: #fff;
            border: none;
            padding: 0 35px;
            border-radius: 40px;
        }

        .custom-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 8px;
        }

        .custom-table thead th {
            background: var(--table-header);
            padding: 1rem 2rem;
        }

        .custom-table tbody tr {
            background: #F8E1E1;
        }

        .custom-table td {
            padding: 1rem 2rem;
        }

        .avatar-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #D6D6D6;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 10px;
        }

        .btn-custom {
            padding: 6px 20px;
            border-radius: 8px;
            border: none;
            font-size: 0.85rem;
        }

        .btn-block-custom {
            background: #da6541;
            color: #fff;
        }

        .btn-unblock-custom {
            background: #E8F5E9;
            color: #2E7D32;
        }

        .pagination-container {
            display: flex;
            gap: 8px;
            margin-top: 20px;
        }

        .page-num {
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 6px;
            text-decoration: none;
            color: #555;
        }

        .page-num.active {
            background: #D6D6E0;
            font-weight: bold;
        }
    </style>
</head>

<body>

<div class="container-fluid">

    <!-- SEARCH -->
    <form method="GET" action="/admin/users" class="search-container">
        <i class="fas fa-search search-icon"></i>
        <input
            type="text"
            name="search"
            value="<%= search || '' %>"
            class="search-input"
            placeholder="Search customers..."
        >
        <button class="search-btn">Search</button>
    </form>

    <!-- TABLE -->
    <div class="table-responsive">
        <table class="custom-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                <% if (users.length === 0) { %>
                    <tr>
                        <td colspan="4" class="text-center">No customers found</td>
                    </tr>
                <% } else { %>
                    <% users.forEach(user => { %>
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle">
                                        <%= user.name.charAt(0).toUpperCase() %>
                                    </div>
                                    <%= user.name %>
                                </div>
                            </td>

                            <td><%= user.email %></td>
                            <td><%= user.phone || "N/A" %></td>

                            <td>
                                <% if (user.isBlocked) { %>
                                    <a href="/admin/unblock-user/<%= user._id %>"
                                       class="btn-custom btn-unblock-custom">Unblock</a>
                                <% } else { %>
                                    <a href="/admin/block-user/<%= user._id %>"
                                       class="btn-custom btn-block-custom">Block</a>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- PAGINATION -->
    <div class="pagination-container">
        <% for (let i = 1; i <= totalPages; i++) { %>
            <a
                href="/admin/users?page=<%= i %>&search=<%= search || '' %>"
                class="page-num <%= currentPage === i ? 'active' : '' %>">
                <%= i %>
            </a>
        <% } %>
    </div>

</div>

</body>

</html>
