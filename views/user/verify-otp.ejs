<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Verify OTP</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Berkshire+Swash&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #e3afaf, #dca2a2);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            background: #ffe4d6;
            border-radius: 25px;
            padding: 40px;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

        h2 {
            font-family: 'Berkshire Swash', cursive;
            color: #8b3a3a;
            text-align: center;
            margin-bottom: 20px;
        }

        .otp-inputs {
            display: flex;
            justify-content: center;
            gap: 12px;
            margin: 20px 0;
        }

        .otp-field {
            width: 55px;
            height: 55px;
            text-align: center;
            font-size: 20px;
            border-radius: 10px;
            border: none;
            background: #ffc9c9;
            font-weight: bold;
        }

        .otp-field:focus {
            outline: 2px solid #8b3a3a;
        }

        .btn-confirm {
            background: #cf9696;
            border: none;
            width: 100%;
            padding: 12px;
            border-radius: 30px;
            font-weight: bold;
            color: #8b3a3a;
        }

        .resend {
            text-align: center;
            margin-top: 15px;
        }

        .resend a {
            color: #8b3a3a;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
        }

        .resend a:hover {
            text-decoration: underline;
        }

        .back {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>

<body>

<div class="card">
    <h2>Confirm With OTP</h2>
    <p class="text-center">Check your email for the 6-digit OTP</p>

    <form id="otpForm">
        <div class="otp-inputs">
            <input class="otp-field" maxlength="1" autofocus>
            <input class="otp-field" maxlength="1">
            <input class="otp-field" maxlength="1">
            <input class="otp-field" maxlength="1">
            <input class="otp-field" maxlength="1">
            <input class="otp-field" maxlength="1">
        </div>

        <button type="submit" class="btn-confirm">Verify OTP</button>
    </form>

    <div class="resend">
        <a id="resendOtp">Resend OTP</a>
    </div>

    <div class="back">
        <a href="/login">Go back to login</a>
    </div>
</div>

<!-- Scripts -->
<script>
const inputs = document.querySelectorAll(".otp-field");

inputs.forEach((input, index) => {
    input.addEventListener("input", () => {
        if (input.value && index < inputs.length - 1) {
            inputs[index + 1].focus();
        }
    });

    input.addEventListener("keydown", (e) => {
        if (e.key === "Backspace" && !input.value && index > 0) {
            inputs[index - 1].focus();
        }
    });
});

document.getElementById("otpForm").addEventListener("submit", async (e) => {
    e.preventDefault();

    let otp = "";
    inputs.forEach(i => otp += i.value);

    if (otp.length !== 6) {
        Swal.fire("Invalid OTP", "Enter 6 digit OTP", "warning");
        return;
    }

    const res = await fetch("/verify-otp", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ otp })
    });

    const data = await res.json();

    if (res.ok) {
        Swal.fire("Success", "OTP Verified", "success")
            .then(() => window.location.href = "/login");
    } else {
        Swal.fire("Error", data.message, "error");
    }
});

document.getElementById("resendOtp").addEventListener("click", async () => {
    const res = await fetch("/resend-otp", { method: "POST" });
    const data = await res.json();
    Swal.fire(data.message);
});
</script>

</body>
</html>
