<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Login</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #dba39a;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Poppins', sans-serif;
            margin: 0;
        }

        .login-card {
            background: linear-gradient(135deg, #fccbba 0%, #fae1d4 100%);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            max-width: 900px;
            width: 90%;
        }

        .login-content {
            padding: 40px;
        }

        h2 {
            font-family: 'Dancing Script', cursive;
            color: #8B4513;
            font-size: 3rem;
            margin-bottom: 30px;
            font-weight: 700;
            text-align: center;
        }

        .form-label {
            color: #8B4513;
            font-weight: 500;
        }

        .form-control {
            background-color: rgba(255, 182, 193, 0.4);
            border: 1px solid #dba39a;
            border-radius: 8px;
        }

        .form-control:focus {
            border-color: #8B4513;
            box-shadow: none;
        }

        .btn-login {
            background-color: #d89696;
            color: #8B4513;
            font-weight: 600;
            border: none;
            padding: 12px;
            border-radius: 25px;
            width: 100%;
            margin-top: 15px;
        }

        .btn-login:hover {
            background-color: #c97b7b;
            color: white;
        }

        .btn-google {
            background-color: white;
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 25px;
            width: 100%;
            margin-top: 10px;
            font-weight: 500;
        }

        .btn-google img {
            width: 20px;
            margin-right: 10px;
        }

        .image-container {
            background-color: #fcece4;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .cake-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>
</head>

<body>

<div class="login-card row g-0">
    <!-- Left Side -->
    <div class="col-md-6">
        <div class="login-content">
            <h2>Login</h2>

            <form id="loginForm">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" id="email" class="form-control" placeholder="Enter email" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" id="password" class="form-control" placeholder="Enter password" required>
                </div>
                <div class="text-end">
                    <a href="/forgotPassword" class="text-primary" style="font-size: 0.8rem;">Forgot password?</a>
                </div>


                <button type="submit" class="btn btn-login">Login</button>
            </form>

            <hr>

            <!-- Google Login -->
            <a href="/auth/google" class="btn btn-google text-center">
                <img src="https://developers.google.com/identity/images/g-logo.png">
                Login with Google
            </a>

            <p class="text-center mt-3" style="font-size: 0.8rem;">
                Donâ€™t have an account?
                <a href="/signUp">Sign up</a>
            </p>
        </div>
    </div>

    <!-- Right Side -->
    <div class="col-md-6 image-container">
        <img src="/media/login.jpg" class="cake-image" alt="Login Image">
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
document.getElementById("loginForm").addEventListener("submit", async (e) => {
    e.preventDefault();

    const email = document.getElementById("email").value.trim();
    const password = document.getElementById("password").value.trim();

    const res = await fetch("/login", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ email, password })
    });

    const data = await res.json();

    if (res.ok) {
        alert("Login successful");
        window.location.href = "/";
    } else {
        alert(data.message);
    }
});
</script>

</body>
</html>
