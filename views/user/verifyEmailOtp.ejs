<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Verify Email OTP</title>

  <!-- Google Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Outfit', sans-serif;
      background: linear-gradient(135deg, #fff0ed 0%, #ffe4e1 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .otp-card {
      background: #ffffff;
      padding: 40px;
      border-radius: 20px;
      width: 100%;
      max-width: 420px;
      box-shadow: 0 15px 35px rgba(0,0,0,0.08);
      text-align: center;
    }

    h2 {
      color: #5c2823;
      margin-bottom: 10px;
    }

    p {
      color: #8c5852;
      font-size: 0.9rem;
    }

    .otp-box {
      display: flex;
      justify-content: space-between;
      margin: 25px 0;
    }

    .otp-input {
      width: 50px;
      height: 55px;
      font-size: 1.5rem;
      text-align: center;
      border-radius: 10px;
      border: 1px solid #e0bcbc;
      background: #fbdfdd;
      outline: none;
    }

    .otp-input:focus {
      border-color: #bd7b72;
      background: #fff;
    }

    .btn {
      margin-top: 20px;
      width: 100%;
      background: #bd7b72;
      color: #fff;
      border: none;
      border-radius: 12px;
      padding: 14px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
    }

    .btn:hover {
      background: #a5665e;
    }

    .error {
      color: #c0392b;
      margin-top: 10px;
      font-size: 0.9rem;
    }

    .back-link {
      display: block;
      margin-top: 15px;
      font-size: 0.85rem;
      color: #8c5852;
      text-decoration: none;
    }

    .back-link:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>

  <form class="otp-card" action="/verifyEmailOtp" method="POST">
    <h2>Verify Email</h2>
    <p>Enter the 6-digit OTP sent to your new email address</p>

    <div class="otp-box">
      <input class="otp-input" type="text" name="otp1" maxlength="1" required>
      <input class="otp-input" type="text" name="otp2" maxlength="1" required>
      <input class="otp-input" type="text" name="otp3" maxlength="1" required>
      <input class="otp-input" type="text" name="otp4" maxlength="1" required>
      <input class="otp-input" type="text" name="otp5" maxlength="1" required>
      <input class="otp-input" type="text" name="otp6" maxlength="1" required>
    </div>

    <% if (typeof error !== "undefined") { %>
      <div class="error"><%= error %></div>
    <% } %>

    <button type="submit" class="btn">Verify & Update Email</button>

    <a href="/editProfile" class="back-link">Cancel and go back</a>
  </form>

  <script>
    const inputs = document.querySelectorAll(".otp-input");

    inputs.forEach((input, index) => {
      input.addEventListener("input", () => {
        if (input.value && index < inputs.length - 1) {
          inputs[index + 1].focus();
        }
      });

      input.addEventListener("keydown", (e) => {
        if (e.key === "Backspace" && !input.value && index > 0) {
          inputs[index - 1].focus();
        }
      });
    });
  </script>

</body>
</html>
